# Watch your rails app & sidekiq process and restart it automatically
# Usage:
# `sudo apt-get install monit -y`
# `cp monit.conf.example /etc/monit/conf.d/`
# `service monit restart`
check process my_app_name_puma
  with pidfile /data/www/my_app_name/shared/tmp/pids/puma.pid
  start program = "/bin/sh -c 'cd /data/www/my_app_name/current; PATH=bin:/home/ruby/.rbenv/shims:/home/ruby/.rbenv/bin:$PATH LC_ALL=en_US.UTF-8 RAILS_ENV="production" bundle exec puma -q -d -e production -C config/puma.rb'" as uid ruby and gid ruby with timeout 90 seconds
  stop program = "/bin/sh -c 'cd /data/www/my_app_name/current; PATH=bin:/home/ruby/.rbenv/shims:/home/ruby/.rbenv/bin:$PATH LC_ALL=en_US.UTF-8 RAILS_ENV="production" bundle exec pumactl -F /data/www/my_app_name/current/config/puma.rb stop'" as uid ruby and gid ruby with timeout 90 seconds
  group my_app_name

check process my_app_name_sidekiq
  with pidfile /data/www/my_app_name/shared/tmp/pids/sidekiq.pid
  start program = "/bin/sh -c 'cd /data/www/my_app_name/current; PATH=bin:/home/ruby/.rbenv/shims:/home/ruby/.rbenv/bin:$PATH LC_ALL=en_US.UTF-8 RAILS_ENV="production" bundle exec sidekiq -d -e production  -C /data/www/my_app_name/current/config/sidekiq.yml -i 0 -P /data/www/my_app_name/shared/tmp/pids/sidekiq.pid -L /data/www/my_app_name/current/log/sidekiq.log'" as uid ruby and gid ruby with timeout 90 seconds
  stop program = "/bin/sh -c 'cd /data/www/my_app_name/current; PATH=bin:/home/ruby/.rbenv/shims:/home/ruby/.rbenv/bin:$PATH LC_ALL=en_US.UTF-8 RAILS_ENV="production" bundle exec sidekiqctl stop /data/www/my_app_name/shared/tmp/pids/sidekiq.pid 11'" as uid ruby and gid ruby with timeout 90 seconds
  group my_app_name

