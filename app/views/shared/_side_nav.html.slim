nav#sidebar.sidebar-wrapper.bg-dark.text-light
  a#toggle-sidebar.btn.btn-sm.btn-dark href="#" title="Toggle Sidebar Visibility"
    i.fas.fa-bars

  .sidebar-content
    /.navbar-push
    
