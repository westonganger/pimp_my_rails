        img.img-responsive.img-rounded alt=("User picture") src="https://raw.githubusercontent.com/azouaoui-med/pro-sidebar-template/gh-pages/src/img/user.jpg"
      .user-info
        span.user-name
          strong = current_user.name
        span.user-role Administrator
        span.user-status
          i.fa.fa-circle
          span Online

    .sidebar-search
      div
        form action="/search" method="GET"
          .input-group
            input.form-control.search-menu placeholder="Search..." type="text"
