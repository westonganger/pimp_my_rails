doctype html
html.h-100 lang="en" 
  head
    = render 'shared/meta_tags'

    title = SITE_DATA[:app_name]
    meta content="#{SITE_DATA[:app_description]}" name="description"
    meta content=("Weston Ganger") name="author"

    = favicon_link_tag "favicon.ico"

    = stylesheet_link_tag 'front_end', media: 'all', 'data-turbolinks-track': 'reload'

    = javascript_pack_tag 'front_end', 'data-turbolinks-track': 'reload'

  body.has-sticky-footer#page-top
    = render "shared/loader"

    nav.navbar.bg-dark.bg-light.fixed-top
      a.navbar-brand[href="/"]
        = image_tag "logo_alt.png", class: 'd-inline-block align-top', alt: "Logo", style: "max-height:45px;"

      ul.navbar-nav
        li.nav-link
          a.btn.btn-primary href=dashboard_path Client Area

    .navbar-push
    = render "shared/flash"

    #page-content
      = yield
      = render "shared/admin_buttons"

    = render "shared/footer"
