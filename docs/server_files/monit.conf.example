# Watch your rails app & sidekiq process and restart it automatically
# Usage:
# `sudo apt-get install monit -y`
# `cp monit.conf.example /etc/monit/conf.d/`
# `service monit restart`
check process rails_starter_app_puma
  with pidfile /data/www/rails_starter_app/shared/tmp/pids/puma.pid
  start program = "/bin/sh -c 'cd /data/www/rails_starter_app/current; PATH=bin:/home/ruby/.rbenv/shims:/home/ruby/.rbenv/bin:$PATH LC_ALL=en_US.UTF-8 RAILS_ENV="production" bundle exec puma -q -d -e production -C config/puma.rb'" as uid ruby and gid ruby with timeout 90 seconds
  stop program = "/bin/sh -c 'cd /data/www/rails_starter_app/current; PATH=bin:/home/ruby/.rbenv/shims:/home/ruby/.rbenv/bin:$PATH LC_ALL=en_US.UTF-8 RAILS_ENV="production" bundle exec pumactl -F /data/www/rails_starter_app/current/config/puma.rb stop'" as uid ruby and gid ruby with timeout 90 seconds
  group rails_starter_app

check process rails_starter_app_sidekiq
  with pidfile /data/www/rails_starter_app/shared/tmp/pids/sidekiq.pid
  start program = "/bin/sh -c 'cd /data/www/rails_starter_app/current; PATH=bin:/home/ruby/.rbenv/shims:/home/ruby/.rbenv/bin:$PATH LC_ALL=en_US.UTF-8 RAILS_ENV="production" bundle exec sidekiq -d -e production  -C /data/www/rails_starter_app/current/config/sidekiq.yml -i 0 -P /data/www/rails_starter_app/shared/tmp/pids/sidekiq.pid -L /data/www/rails_starter_app/current/log/sidekiq.log'" as uid ruby and gid ruby with timeout 90 seconds
  stop program = "/bin/sh -c 'cd /data/www/rails_starter_app/current; PATH=bin:/home/ruby/.rbenv/shims:/home/ruby/.rbenv/bin:$PATH LC_ALL=en_US.UTF-8 RAILS_ENV="production" bundle exec sidekiqctl stop /data/www/rails_starter_app/shared/tmp/pids/sidekiq.pid 11'" as uid ruby and gid ruby with timeout 90 seconds
  group rails_starter_app

